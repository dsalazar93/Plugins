audio
	bottom 0
	opacity 0.3
	position absolute
	right 0
	z-index 10
	
	&:hover
		opacity 1

.lnt-captions
	background-color rgba(0,0,0,0.7)
	color white
	display none
	padding 2em
	padding-bottom 4em
	position relative
	text-align left
	
	h2
		color #008b7d
		font-size 2em
		font-weight bold
		
	.icon-star
		color #efc204
		margin-left -26px
	
	[data-start]
		opacity 0
		padding-left 2em
	
	h1, h2, h3, h4, h5, h6
		&[data-start]
			padding-left 0