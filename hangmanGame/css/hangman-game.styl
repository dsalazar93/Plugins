.unc-hangman	
	text-align center
	
	.unc-hangman-question
		font-size 1.5em
		font-weight bold
		text-align center
	
	img
		max-width 250px
		width 100%
		
	.unc-hangman-answer
		border thin solid #ccc
		padding 1em
		text-align center
		
		span.unc-hangman-answer-word
			display inline-block
		
		span.unc-hangman-answer-letter
			border-bottom 2px solid #aaa
			display inline-block
			font-size 1em
			height 20px
			margin 5px
			text-align center
			width 20px
			
			&.unc-hangman-space
				// display block
				height auto
				border none
			
	.unc-hangman-letters
		margin 0 auto
		max-width 250px
		text-align center
		
		span
			border thin solid #ccc
			border-radius 3px
			cursor pointer
			display inline-block
			font-size 1.5em
			margin 5px
			text-align center
			width 25px
			
			&.error,
			&.success
				background-color #ccc
			&.error
				color red
			&.success
				color green
			&.disabled
				color #aaa