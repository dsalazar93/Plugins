.unc-hangman	
	border-radius 10px
	margin 0 auto
	max-width 100%
	min-height 400px
	padding 2em
	text-align center
	width 600px
	
	.unc-hangman-title
		color white
		border-bottom thin solid #ccc
		padding .5em
		margin-bottom 1em
		text-align left
	
	.unc-hangman-question
		color white
		font-size 1.2em
		text-align left
	
	img
		max-width 250px
		width 100%
		
	.unc-hangman-answer
		border thin solid #ccc
		padding 1em
		text-align center
		
		span.unc-hangman-answer-word
			display inline-block
		
		span.unc-hangman-answer-letter
			color white
			border-bottom 2px solid #aaa
			display inline-block
			font-size 1em
			height 20px
			margin 5px
			text-align center
			width 20px
			
			&.unc-hangman-space
				// display block
				height auto
				border none
			
	.unc-hangman-letters
		margin 1em auto
		max-width 250px
		text-align center
		
		span
			background-color white
			border thin solid #ccc
			border-radius 3px
			cursor pointer
			display inline-block
			font-size 1.5em
			margin 5px
			text-align center
			width 25px
			
			&.error,
			&.success
				background-color #ccc
			&.error
				color red
			&.success
				color green
			&.disabled
				color #aaa
	
	.unc-hangman-finished
		color white
		display block
		font-size 1.2em
		text-align center
		
		img
			display block
			margin 0 auto
			width 80px