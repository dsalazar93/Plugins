.unc-menu-wheel 
	border thin solid #ccc
	border-radius 50%
	bottom 0
	left 0
	margin 0 auto
	position absolute
	right 0
	transform translateY(100%)
	transition .5s transform linear

	.unc-menu-wheel-btn
		align-items center
		background-color yellow
		background-size 70%
		background-position center
		background-repeat no-repeat
		border-radius 50%
		cursor pointer
		display flex
		justify-content center
		position absolute
