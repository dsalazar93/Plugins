/* POPUP */
.lnt-popup
	align-content center
	background-color rgba(0,0,0,0.7)
	display flex
	flex-direction column
	justify-content center
	height 100%
	left 0
	position absolute
	top 0
	width 100%
	z-index 10
	
	.lnt-popup-wrapper
		background-color white
		margin 0 auto
		max-width 90%
		min-height 200px
		width 800px
		
		.icon-cross
			color #999
			cursor pointer
			float right
			font-size 20px
			margin 1em
			
			&:hover
				color: #333
				
		.lnt-popup.content
			padding 1em