/* POPUP */
.lnt-popup
	animation popupShow .5s linear forwards
	align-content center
	display flex
	flex-direction column
	justify-content center
	height 100%
	left 0
	overflow hidden
	padding 2em
	position absolute
	top 0
	width 100%
	z-index 1000
	
	.icon-cross
		color #ccc
		cursor pointer
		font-size 32px
		margin 30px
		position absolute
		transition .5s all ease
		right 0
		top 0
		
		&:hover
			color: #777
			transform rotate(90deg)
	
	.lnt-popup-wrapper
		animation wrapperShow .5s linear forwards
		animation-delay .5s
		background-color white
		display none
		margin 0 auto
		max-width 90%
		min-height 200px
		opacity 0
		overflow auto
				
		.lnt-popup-content
			padding 1em

@keyframes popupShow
	from
		background-color trnsparent
	to
		background-color rgba(0,0,0,0.9)

@keyframes wrapperShow
	from
		opacity 0
	to
		opacity 1