form.lnt-evaluation
	h1
		background-color #008b7d
		border-top-left-radius 10px
		border-top-right-radius 10px
		color white
		margin 0 auto
		margin-top 2em
		padding 1em 2em
		width 800px
		
	fieldset
		border thin solid #aaa
		color black
		margin 0 auto
		padding 1em
		width 800px
		
		.lnt-question 
			margin-bottom 2em
			
			div
				margin-left 2em
		
		.lnt-feedback
			background-color #eee
			border thin solid #ccc
			display none
			margin-top 1em
			padding 1em
			
			div
				margin-left 0
				
			.good, .bad
				display none
				
				h3
					color #008b7d
					font-weight bold
					
			.bad h3
				color #ff9800
		
		input[type="radio"]
			display none
			
			& + label
				background-color #ddd
				border-radius 5px
				color #777
				cursor pointer
				display block
				margin-top .5em
				padding 5px
				transition .5s all ease
				
				span
					background-color white
					border 2px solid #aaa
					border-radius 2px
					box-sizing content-box
					display inline-block
					height 20px
					margin 0 1em
					vertical-align text-bottom
					width 20px
					transition .5s all ease
					
					div
						background-color #777
						border-radius 50%
						display none
						height 10px
						margin 5px
						width 10px
						transition .5s all ease
			
			&:checked						
				& + label
					background-color #ff9800
					color white
						
					&.good
						background-color #008b7d
						color white
					
					span
						border-color #777
						
						div
							display block