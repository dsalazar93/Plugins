.lnt-youtube-captions
	max-width 100%
	
	.player
		width 100%
		
		> div
			padding-bottom 56.25%
			position relative
			height 0
	
			iframe
				left 0
				height 100%
				position absolute
				top 0
				width 100%
				
	.lnt-youtube-panel
		overflow hidden
		
		h1
			background-color #eee
			border-bottom 2px solid #aaa
			font-size 28px
			font-weight bold
			margin 0
			padding 9px
			text-align center
		
	.lnt-youtube-playlist
		height calc(100% - 50px)
		
		ul
			list-style none
			margin 1em
			padding 0

			li
				cursor pointer
				border thin solid #aaa
				padding .5em
				margin-bottom 1em
				transition .5s all ease
				
				span
					color #607D8B
					font-size 1em
					margin-right 5px
					vertical-align baseline

				&:hover
					background-color #eee
					
				&.lnt-caps-actived
					background-color #799054
					color white
					
					span
						color white
					
					&:hover
						background-color #eee
						color initial
						span
							color #607D8B
	
	&.lnt-youtube-inline
		overflow hidden
		
		.player
			float left
			width 60%
		
		.lnt-youtube-panel
			float left
			margin 0
			width 40%
			
			.lnt-youtube-playlist			
				ul
					li
						overflow hidden
						text-overflow ellipsis
						white-space nowrap